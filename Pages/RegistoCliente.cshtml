@page
@model EZFair.Pages.RegistoCliente
@{
    ViewData["Title"] = "Registo Cliente";
}

<style>
    body {
        background-color: #121212;
    }
</style>

@using (Html.BeginForm())
{
    <br>
    <br>
    <div style="text-align: center; color: #DEA402; font-size: 4em; text-shadow: 1px 1px 0px white;">Registar Cliente</div>
    <br>
    <div class="form-group">
        <label asp-for="Name" style="color:white; margin-left: 50px;" >Nome</label>
        <input asp-for="Name" required class="form-control" style="margin-left: 50px;"  />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
     <br>
     <br>
    <div class="form-group">
        <label asp-for="Email" style="color:white; margin-left: 50px;">Email</label>
        <input asp-for="Email" required class="form-control" style="margin-left: 50px;" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <br>
        <br>
    </div>
    <div class="form-group">
        <label asp-for="Username" style="color:white; margin-left: 50px;" >Username</label>
        <input asp-for="Username" required class="form-control" style="margin-left: 50px;" />
        <span asp-validation-for="Username" class="text-danger"></span>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <br>
        <br>
    </div>
    <div class="form-group">
        <label asp-for="Password" style="color:white; margin-left: 50px;" >Password</label>
        <input asp-for="Password" required type="password" class="form-control" style="margin-left: 50px;"  />
        <span asp-validation-for="Password" class="text-danger"></span>
        <br>
        <br>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" style="color:white; margin-left: 50px;" >PhoneNumber</label>
        <input asp-for="PhoneNumber" required class="form-control" style="margin-left: 50px;"  />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <br>
        <br>
    </div>
    <br>
    <div style="text-align:center;">
    <button type="submit" class="button btn btn-primary" style="background-color: #DEA402;
                                                                color: white;
                                                                padding: 15px 15px;
                                                                text-decoration: none;
                                                                display: inline-block;
                                                                font-size: 35px;
                                                                margin: 4px 2px;
                                                                border: 1px solid white;
                                                                cursor: pointer;">REGISTAR</button>
    </div>
}


