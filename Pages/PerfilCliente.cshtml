@page
@model EZFair.Pages.PerfilClienteModel
@{
    ViewData["Title"] = "Cliente";
}

<div class="user-profile">
    <img src="~/images/profilenovo.png" alt="profile picture">
    <div class="profile-info">
        <h2>@Model.username</h2>
        <p><i class="fa fa-envelope"></i> @Model.nome</p>
        <p><i class="fa fa-user"></i> @Model.email</p>
    </div>
</div>

<style>
    body {
        background-color: #121212;
    }

    .user-profile {
        display: flex;
        align-items: center;
        background-color: #EBEBEB;
        padding: 20px;
        margin-top: 50px;
        border: 2.5px solid white;
    }

    .user-profile img {
        width: 120px;
        height: 100px;
        /*border-radius: 50%;*/
        margin-right: 20px;
    }

    .profile-info p {
        margin: 10px 0;
    }
</style>